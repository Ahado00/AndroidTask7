<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!--Sign in with google-->
    <Button
        android:id="@+id/google"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sign In With Your Google Account"
        android:textStyle="bold"
        android:drawableStart="@drawable/g24"
        android:layout_marginTop="150dp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/black"
        android:textAllCaps="false"
        />

    <!--Enter Email-->
    <EditText
        android:id="@+id/Email"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_below="@id/google"
        android:layout_marginTop="16dp"
        android:background="@drawable/gray"
        android:drawableStart="@drawable/email"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="16dp"
        android:inputType="textEmailAddress"
        />


    <!--Enter Password-->
    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_below="@id/Email"
        android:layout_marginTop="16dp"
        android:background="@drawable/gray"
        android:drawableStart="@drawable/lock"
        android:drawableEnd="@drawable/hide"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="16dp"
        android:inputType="textPassword"
        />


    <!--LogIn Button-->
    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="32dp"
        android:background="@drawable/green"
        android:text="LogIn"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <!--Forgot password option-->
    <TextView
        android:id="@+id/forgotText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginTop="20dp"
        android:text="@string/edit_text_hint"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <!--Signup-->
    <TextView
        android:id="@+id/signUp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgotText"
        android:layout_marginTop="20dp"
        android:text="@string/signup"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />


    <!--Skip-->
    <TextView
        android:id="@+id/skip"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUp"
        android:layout_marginTop="32dp"
        android:text="Skip"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />
</RelativeLayout>